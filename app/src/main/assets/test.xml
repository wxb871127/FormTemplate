<?xml version="1.0" encoding="utf-8"?>
<views>
    <input
        name="sg"
        inputType="numberDecimal"
        label="身高"
        unit="cm" />

    <input
        name="tz"
        inputType="numberDecimal"
        label="体重"
        required="true"
        unit="kg" />

    <input
        name="bmi"
        editable="false"
        value="tz / pow(sg/100, 2)"
        decimalFormat="0.00"
        label="体质指数" />

    <input
        name="jytz"
        label="建议体重"
        editable="false"
        value = "(bmi > 24) ? (sg-100) * 0.9 : null"/>
</views>