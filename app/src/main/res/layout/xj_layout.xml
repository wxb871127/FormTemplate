<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/template_section_background"
        android:layout_marginTop="@dimen/dp24"
        android:paddingLeft="@dimen/dp9"
        android:text="小结"
        android:textColor="@color/template_c0278FE"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/exception_result_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:paddingLeft="@dimen/dp11"
        android:text="异常结果"
        android:textColor="@color/template_c333333"
        android:textSize="@dimen/sp15" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp17"
        android:paddingLeft="@dimen/dp11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/template_cd4d4d4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp52"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/department_summary"
            android:layout_width="@dimen/dp168"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp11"
            android:text="科室总节"
            android:textColor="@color/template_c333333"
            android:textSize="@dimen/sp15" />

        <View
            android:layout_width="@dimen/dp0.5"
            android:layout_height="match_parent"
            android:background="@color/template_cd4d4d4"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/kszj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入"
            android:paddingLeft="@dimen/dp16"
            android:textColor="@color/black"
            android:textColorHint="@color/template_cc2c2c2"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/template_cd4d4d4" />
</LinearLayout>