<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_linelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp17">

    <TextView
        android:id="@+id/excption_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="齿列异常："
        android:textColor="@color/template_c333333"
        android:textSize="@dimen/sp15" />

    <TextView
        android:id="@+id/excption_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左三上义齿"
        android:textColor="@color/template_cff5959"
        android:textSize="@dimen/sp15" />

    <EditText
        android:id="@+id/bz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp10"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="请输入"
        android:paddingLeft="@dimen/dp15"
        android:textColor="@color/black"
        android:textColorHint="@color/template_cc2c2c2"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp15" />
</LinearLayout>