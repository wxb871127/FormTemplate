<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp5"
    android:paddingTop="@dimen/dp5" >

    <LinearLayout
        android:id="@+id/common_template_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp30"
        android:background="@drawable/bg_white_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp5" >

        <TextView
            android:id="@id/template_list_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dp7"
            android:paddingTop="@dimen/dp7"
            android:textColor="@color/c_303030"
            android:textSize="14sp" />
        <TextView
            android:id="@id/template_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp7"
            android:paddingTop="@dimen/dp7"
            android:background="@null"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center_vertical|right"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            />
        <ImageView
            android:id="@id/template_list_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/list_template_item_delete" />
    </LinearLayout>

</LinearLayout>