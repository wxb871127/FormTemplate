<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_linelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">
<!--    android:background="@drawable/template_list_item_stroke_selector"-->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">

        <TextView
            android:id="@id/template_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp7"
            android:paddingTop="@dimen/dp7"
            android:background="@null"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center_vertical|right"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <EditText
            android:id="@id/template_edit"
            android:layout_gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/c_d1d1d1"
            android:clickable="false"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/dp10"
            android:textSize="16sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/common_template_unit_divider"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@id/template_input_unit"
        android:text="cm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:textColor="@color/c2cc1a4"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/common_template_quote"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5"
        android:src="@drawable/template_common_quote" />
</LinearLayout>