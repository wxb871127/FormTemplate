<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_linelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/template_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/dp52"
        android:orientation="horizontal">

        <!--label、require -->
        <RelativeLayout
            android:id="@+id/template_title"
            android:layout_width="0dp"
            android:layout_weight="168"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp9">

            <TextView
                android:id="@id/template_label"
                android:layout_width="@dimen/dp90"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="扩散速度飞快飞快放假时间飞快放假"
                android:textColor="@color/template_c333333"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@id/template_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dp10"
                android:text="*"
                android:textColor="@color/template_cff3838"
                android:textSize="@dimen/sp14" />


        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp0.5"
            android:layout_height="match_parent"
            android:background="@color/template_cd4d4d4"
            android:visibility="gone"/>

        <!--content -->
        <LinearLayout
            android:id="@+id/common_template_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="495"
            android:orientation="horizontal" />

        <View
            android:layout_width="@dimen/dp0.5"
            android:layout_height="match_parent"
            android:background="@color/template_cd4d4d4"
            android:visibility="gone"/>

        <!--异常、拒检 -->
        <LinearLayout
            android:id="@+id/attr"
            android:layout_width="0dp"
            android:layout_weight="160"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/template_exception"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp9"
                android:paddingRight="@dimen/dp21">


                <ImageView
                    android:id="@+id/template_exception_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/template_abnormal_icon_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="异常"
                    android:textColor="@color/template_c666666"
                    android:textSize="@dimen/sp14" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/template_refuse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp22"
                android:paddingRight="@dimen/dp9">


                <ImageView
                    android:id="@+id/template_refuse_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/template_refuse_icon_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="拒检"
                    android:textColor="@color/template_c666666"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/template_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/template_cd4d4d4" />

</LinearLayout>