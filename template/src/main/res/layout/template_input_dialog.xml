<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp315"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp23"
        android:paddingRight="@dimen/dp23">

        <TextView
            android:id="@+id/input_template_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:layout_marginBottom="@dimen/dp9"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/template_c333333"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />


        <template.view.MaxHeightListView
            android:id="@id/template_search_dialog_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:paddingTop="@dimen/dp12"
                android:paddingBottom="@dimen/dp10"
                android:text="取消"
                android:textColor="@color/template_c333333"
                android:textSize="@dimen/sp16" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:paddingTop="@dimen/dp12"
                android:paddingBottom="@dimen/dp10"
                android:text="确定"
                android:textColor="@color/template_c0278FE"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>