<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-2dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <template.view.TemplateView
        android:id="@+id/templateView"
        android:layout_width="@dimen/dp370"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp9"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="@dimen/dp370"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/dp140"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/template_grey_solid_corner"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />

        <Button
            android:id="@+id/btn_sure"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/dp140"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp30"
            android:background="@drawable/template_blue_solid_corner"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />
    </LinearLayout>
</LinearLayout>