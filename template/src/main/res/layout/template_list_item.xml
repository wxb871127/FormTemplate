<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp15">

    <LinearLayout
        android:id="@+id/common_template_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/template_list_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/template_list_item_delete" />

        <TextView
            android:id="@id/template_list_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp26"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingRight="@dimen/dp9"
            android:textSize="@dimen/sp13" />

    </LinearLayout>

</LinearLayout>